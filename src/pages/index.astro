---
import Layout from "../layouts/Layout.astro"
import path from "path"
import dayjs from "dayjs"

const posts = await Astro.glob("../../posts/**/*.md")

const contents = await Promise.all(
  posts
    ?.map(async post => {
      const pagePath = `/posts/${post.frontmatter.slug}`
      const date = dayjs(post.frontmatter.date).format("YYYY/MM/DD")
      const title = `#${post.frontmatter.no} - ${date}`
      const headings = await post
        .getHeadings()
        .filter(heading => heading.depth <= 3)
      return { pagePath, title, headings }
    })
    .reverse()
)
---

<Layout title="Cybozu Frontend Monthly">
  <h1 class="title">Cybozu Frontend Monthly</h1>
  <ul class="posts">
    {
      contents.map(content => {
        return (
          <li class="post">
            <a href={content.pagePath}>
              <h2>{content.title}</h2>
              <ul>
                {content.headings.slice(0, 8).map(heading => {
                  return <li>{heading.text}</li>
                })}
                {content.headings.length > 8 && <li>ä»–</li>}
              </ul>
            </a>
          </li>
        )
      })
    }
  </ul>
</Layout>

